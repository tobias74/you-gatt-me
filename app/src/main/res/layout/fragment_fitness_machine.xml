<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- If you're using data binding for additional ViewModel binding, declare variables here -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.FitnessMachineFragment">

        <!-- Spinner for selecting the FTMS mode -->
        <Spinner
            android:id="@+id/fitnessMachineModeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Container for loading the child fragment based on the selection -->
        <FrameLayout
            android:id="@+id/childContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</layout>